<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!--        타이틀바-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--        상태바-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <!--        액션바 숨기기-->
        <item name="windowActionBar">false</item>
        <!--        타이틀바 숨기기-->
        <item name="windowNoTitle">true</item>
        <!--        상태바 색 변경하기-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--        <item name="android:windowLightStatusBar">true</item>-->
    </style>

    <!--    학업디테일 상테바 변경-->

    <style name="AppTheme.StudyActionBar">
        <item name="windowActionBar">false</item>
        <!--        타이틀바 숨기기-->
        <item name="windowNoTitle">true</item>
        <!--        상태바 색 변경하기-->
        <item name="android:statusBarColor">@android:color/darker_gray</item>
    </style>


    <!--    //text-->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active
        </item>
        <item name="itemTextAppearanceInactive">
            @style/TextAppearance.BottomNavigationView.Inactive
        </item>
    </style>

    <!-- blank styles for better code readability-->
    <style name="TextAppearance" />

    <style name="TextAppearance.BottomNavigationView" />

    <!-- inactive tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">12sp</item>
        <item name="android:tint">#3c3b3c</item>
    </style>

    <!-- active tab icon style -->
    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">12sp</item>
        <item name="android:color">#3c3b3c</item>
    </style>

    <style name="MyProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">#999</item>
        <item name="android:progressTint">#00c7ae</item>
        <item name="android:minWidth">10dp</item>
    </style>
</resources>