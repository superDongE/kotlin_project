<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/coustom_underline"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/gosu_profile_img"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_x_white_btn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gosu_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고수이름"
            android:textSize="20dp"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/gosu_onelinetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:maxLength="20"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="자기소개글" />



        <Button
            style="?android:attr/borderlessButtonStyle"
            android:padding="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="16dp"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:background="@drawable/gosu_discount_text"
            android:text="@string/gosu_discoun"
            android:textColor="@color/white"
            android:textSize="12dp" />


    </LinearLayout>


</LinearLayout>